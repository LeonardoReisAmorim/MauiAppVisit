<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiAppVisit.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="V I S I T"
                FontSize="40"
                HorizontalOptions="Center"
                BackgroundColor="#10B5BF"/>

            <Label
                Text="Escolha o lugar para visitar clicando na imagem"
                FontSize="28"
                HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding LocationItens}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <ImageButton
                                Source="{Binding ImagePlaceByte, Mode=OneWay, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                Aspect="AspectFill"
                                HeightRequest="100"
                                CommandParameter="{Binding Id}"
                                Clicked="ImageButton_Clicked"/>

                            <Label 
                                FontSize="Large"
                                FontAttributes="Bold"
                                Text="{Binding PlaceName}"/>
                        </VerticalStackLayout>
                        
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
